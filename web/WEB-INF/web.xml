<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>orderproc</servlet-name>
        <servlet-class>servlets.orderproc</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>order_proc</servlet-name>
        <servlet-class>servlets.order_proc</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkout_proc</servlet-name>
        <servlet-class>servlets.checkout_proc</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>managetopping_proc</servlet-name>
        <servlet-class>servlets.managetopping_proc</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>manageorders_proc</servlet-name>
        <servlet-class>servlets.manageorders_proc</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderproc</servlet-name>
        <url-pattern>/orderproc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>order_proc</servlet-name>
        <url-pattern>/order_proc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkout_proc</servlet-name>
        <url-pattern>/checkout_proc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>managetopping_proc</servlet-name>
        <url-pattern>/managetopping_proc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>manageorders_proc</servlet-name>
        <url-pattern>/manageorders_proc</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
